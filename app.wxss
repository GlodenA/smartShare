/**app.wxss**/
@import "colorui/icon.wxss";
@import "colorui/main.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
} 
.index{
   background-color: white;
}



.tab{
 width: 100%;
 height: 79rpx;

 line-height: 78rpx;
}
.tab-item{
 font-family: SourceHanSansCN-Normal;
 display: inline-block;
 width: 50%;
 font-size: 30rpx;
 color: #666666;

}

.tabitem{
 width:fit-content;
 font-family: SourceHanSansCN-Normal;
 margin: auto;
 font-size: 30rpx;
 color: #666666;
 height: 70rpx;
}

.item_left {
  padding:20rpx 30rpx;
  color: #110d0d;
  border-bottom: 1rpx solid #ededed;
  display:flex;
  flex-direction:column;
}
.item_left .title {
  width:500rpx;
  font-size: 36rpx;
  color:#444;
  margin-bottom:25rpx;
  font-weight:500;
}
.item_left .sub_title {
  font-size: 28rpx;
  color: #999;
  margin: 30rpx 0;
}

.item_left .tag {
  font-size: 28rpx;
  color: rgba(7, 159, 247, 0.801);
}

.item_left .Label {
  display: inline;  
  margin: 10rpx 0;
}
.item_left .time{
  float: right;
  font-size: 28rpx;
  color: #aaa;
}
.item_title {
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;
}