.container {
  overflow: hidden;
  border-top: 3rpx solid #bdbdbda8;
}

.content-container {
  display: -webkit-flex;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.category-container {
  width: 180rpx;
  background: #f3f3f3;
  height: 100%;
}

.category-container .category {
  padding: 30rpx 0rpx;
  text-align: center;
}

.category-container .category.active {
  background: #fff;
  border-left: 6rpx solid #0081ff;
  border-bottom:3rpx solid #f3f3f3;
}
.goods-container {
  flex: 1;
  background: #fff;
  min-height: 100%;
}

.goods-container .goods{
  float:left;
}
.goods-container .goods .classify{
  display:flex;
  flex-direction: column;  
}

.goods-container .goods .pic {
  width: 150rpx;
  height: 150rpx;
  padding: 10rpx;
  margin:20rpx 20rpx;
}
.goods-container .goods .name {
  color: #000;
  font-size: 28rpx;
  text-align: center;
  display: flex;
  flex-direction:column;
}


