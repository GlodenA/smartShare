<!--index.wxml-->
<view class="indexcontainer">
  <view class="title_PH">智享库</view>
  <view  class="capsule" bindtap='bindsearch' > 
    <input type="text" class="search-input cuIcon-search lg text-gray" placeholder="搜 索"/>搜 索
  </view>
  <scroll-view class="tab" scroll-x scroll-left="{{tabScroll}}" scroll-with-animation="true">
    <block wx:for-items="{{ menuList }}"  wx:key="index">
  <view class="tab-item " style="width:{{100/count}}%" data-current="{{item.index}}" bindtap='clickMenu'>
      <view class="tabitem {{currentTab == item.index ? 'active' : ''}}">
        {{ item.name }}
      </view>     
    </view>
 </block>
 </scroll-view>
   
  <block wx:for="{{docsData}}"  wx:key="{{item}}">
    <view class="flex item">
      <view class="flex_auto item_left">
        <view><text class="title">{{item.DOC_NAME}}</text></view>
        <view><text class="sub_title">{{item.DOC_ID}}</text></view>
        <view><text class="tag">{{item.DOC_LABEL}}</text></view>
      </view>
      <view class="item_right">
        <view><text class="count">{{item.DOWNLOAD_CNT}}</text></view>
      </view>
    </view>
  </block>
</view>
