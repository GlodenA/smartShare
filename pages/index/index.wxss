.indexcontainer {
  height: 100%;
  box-sizing: border-box;
  background-color: #fff;
}

.capsule {
  margin:20rpx 0 20rpx 35rpx;
  height: 35px;
  border: 1rpx solid rgba(119, 119, 119, 0.438);
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  width: 90%;
}
.capsule .search{
  width:40rpx;height:40rpx;
  margin:0 50rpx 0 20rpx;
}
.capsule .voice{
  width:40rpx;height:40rpx;
  margin:0 0 0 150rpx;
}
.capsule input{
  font-size: 33rpx;
}
.box{
  width:90%;
  margin-left: 5%;
  margin-right: 5%;
  margin-top: 5%;
  margin-bottom: 5%;
  height: 300rpx;
}


.title_PH {
  font-size: 37rpx;
  padding:20rpx 0 20rpx 320rpx;
  background-color: #fff;
  align-items: center;
  color: #110d0d;
}
.item {
  padding: 10px;
  color: #787878;
  border-top: 1px solid #eaeaea;
}

.item_left {
  flex:1;
  margin-left: 10px;
  padding-top: 5px;
}
.item_left .hot{
  width:40rpx;height:40rpx;
}
.item_left .title {
  width:500rpx;
  font-size: 34rpx;
  color: #333;
  margin-bottom:15rpx;
}
.item_left .sub_title {
  font-size: 22rpx;
  color: #999;
  margin: 30rpx 0;
}

.item_left .tag {
  color: orange;
  font-size: 22rpx;
}

.item_right .count {
  font-size: 12px;
  color: #cf616a;
}

.container{
 width: 100%;
 height: 79rpx;
 background: #FCFCFC;
}
.tab{
 width: 100%;
 height: 79rpx;

 line-height: 78rpx;
}
.tab-item{
 font-family: SourceHanSansCN-Normal;
 display: inline-block;
 width: 50%;
 font-size: 30rpx;
 color: #666666;

}

.tabitem{
 width:fit-content;
 font-family: SourceHanSansCN-Normal;
 margin: auto;
 font-size: 30rpx;
 color: #666666;
 height: 70rpx;
}

.active{
 color: #4A5FE2;
 border-bottom: 1rpx solid #4A5FE2;
}