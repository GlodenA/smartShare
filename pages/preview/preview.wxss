.container{
  width:750rpx;
  background-color: #fff;
}

.item {
  padding: 10px;
  color: #787878;
  border-top: 1px solid #eaeaea;
}

.item_left {
  flex:1;
  margin-left: 10px;
  padding-top: 5px;
}
.item_left .hot{
  width:40rpx;height:40rpx;
}
.item_left .title {
  width:500rpx;
  font-size: 34rpx;
  color: #333;
  margin-bottom:15rpx;
}
.item_left .sub_title {
  font-size: 22rpx;
  color: #999;
  margin: 30rpx 0;
}

.item_left .tag {
  color: orange;
  font-size: 22rpx;
}

.item_right .count {
  font-size: 12px;
  color: #cf616a;
}

