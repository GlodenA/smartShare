<!--pages/selfcentre/selfcentre.wxml-->
<view class="index">
  <view class="head">
    <view class='selfpic'>
      <open-data class='userInfo' type="userAvatarUrl"></open-data>
    </view>
    <view class='userNickName'>
      <open-data class='userInfo' type="userNickName"></open-data>
    </view>
  </view>
  <view class="body">
    <view class="widgets">
      <view class="widgets__item">
        <view class='widgets__list_show'  wx:for="{{list}}" wx:key wx:if="{{item.isShow}}">
          <navigator url="{{item.url}}" class="widget" >
            <text class="widget__name cuIcon-{{item.icon}} lg text-gray"> {{item.name}}</text>
            <image class="widget__arrow" src="/images/arrow.png" background-size="cover" />
            <!-- <view class="widget__line"></view> -->
          </navigator>
        </view>
      </view>
    </view>
  </view>
</view>
