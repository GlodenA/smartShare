<!--picker实现方式-->
<picker mode="selector" range="{{actionSheetItems}}"  bindchange="selectorChange">
  <view class="title">
    默认排序
  </view>
</picker>
  <block wx:for="{{docsData}}" wx:key>
    <view class="flex item">
      <view class="flex_auto item_left">
        <view bindtap="gotoPreview" data-id="{{item.DOC_ID}}">
        <text class="title">{{item.DOC_NAME}}</text></view>
        <view><text class="sub_title">{{item.DOC_ID}}</text></view>
        <view><text class="tag">{{item.DOC_TYPE}}</text></view>
        <view><text class="tag">{{item.DOC_AUTHOR_NAME}}</text></view>
        <view><text class="count">{{item.INS_TIME}}</text></view>
        <view><text class="count">{{item.MSG_NUM}}</text></view>
        <view bindtap='collectclick' data-id='{{item.DOC_ID}}' data-iscollect="{{item.is_collect}}" data-dex="{{index}}"  class="like_box">
          <text class="cuIcon-appreciate lg text-gray" wx:if="{{item.is_collect == 0}}"></text>
          <text class="cuIcon-appreciatefill lg text-red" wx:else></text>
        </view>
        <view bindtap='favorclick' data-id='{{item.DOC_ID}}' data-isgood="{{item.is_good}}" data-dex="{{index}}"  class="like_box">
          <text class="cuIcon-favor lg text-gray" wx:if="{{item.is_good == 0}}"></text>
          <text class="cuIcon-favorfill lg text-red" wx:else></text>

        </view>
      </view>
    </view>
  </block>
  
   </view>



   
       

   