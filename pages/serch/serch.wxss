/* pages/serch/serch.wxss */
.container{
  width:750rpx;
  background-color: #fff;
}
.top{
  width:100%;
  padding: 25rpx;
  display: flex;
}
.top input{
  width: 100%;
}
.capsule {
  width: 90%;
  height: 80rpx;
  border: 1rpx solid rgba(119, 119, 119, 0.438);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.search{
  width:40rpx;height:40rpx;
  margin:0 0 0 20rpx;
}
.top text{
  height:30rpx;
  position:relative;
  left: 2%;
  margin-top: 3%;
  font-size:32rpx;
  color:#1989fa;
}
.item .title{
  padding:34rpx;
  font-size: 36rpx;
  font-weight: 550;
}
.item image{
  width:40rpx;height:40rpx;
  margin-right:20rpx;
}
.item_top button{
  border:1rpx solid #eee;
  border-radius:60rpx;
  align-items: center;
  font-size: 34rpx;
  margin-left:40rpx;
  margin-bottom:30rpx;
  background-color: #eee;
}
.item_bottom{
  display: flex;
  width:750rpx;
  color:#999;
  font-size: 34rpx;
  margin-bottom:35rpx;
  padding-left: 40rpx;
  position:relative;
}
.item_bottom .left{
  padding-bottom:20rpx;
}
.item_bottom .right{
  position:absolute;
  right:50rpx;
  font-size: 50rpx;
  top:-5rpx;
}

.serch .title{
  padding: 35rpx 35rpx 35rpx 50rpx;
  font-size: 36rpx;
  font-weight:550;
}
.serch image{
  width: 30rpx; height: 30rpx;
  font-weight: 550;
}
.item_search {
  padding:35rpx 35rpx 35rpx 50rpx;
  color: #110d0d;
  border-top: 1rpx solid #ccc;
  display:flex;
  flex-direction:column;
}
.item_search .tab{
    padding:10rpx 0;
}
.item_search .title {
  width:500rpx;
  font-size: 34rpx;
  color:#333;
  margin-bottom:25rpx;
  font-weight:550;
  padding:0;
}
.item_search .sub_title {
  font-size: 28rpx;
  color: #999;
  margin: 30rpx 0;
}
.item_article_bottom view{
    display: inline; 
}
.item_article_bottom{
    padding:10rpx 0;
}
.item_article_bottom .tag {
  font-size: 28rpx;
  color: #888;
  position:relative;
  left: 0%;
}

.item_article_bottom .time {
  font-size: 29rpx;
  color: #888;
  position:relative;
  left: 10%;
}
.item_article_bottom .count {
  font-size: 28rpx;
  color: #888;
  position:relative;
  left: 33%;
}
.item_article_bottom .message {
  width: 30rpx; height: 30rpx;
  position:relative;
  left: 35%;
}

.item_article_bottom .like_box {
  font-size: 28rpx;
  color: #888;
  position:relative;
  left: 39%;
}
.item_article_bottom .like_box1 {
  font-size: 28rpx;
  color: #888;
  position:relative;
  left: 45%;
}
