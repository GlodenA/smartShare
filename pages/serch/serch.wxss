/* pages/serch/serch.wxss */
.container{
  width:750rpx;
  background-color: #fff;
}
.top{
  width:100%;
  padding: 25rpx;
  display: flex;
}
.capsule {
  width: 90%;
  height: 80rpx;
  border: 1rpx solid rgba(119, 119, 119, 0.438);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.capsule .search{
  width:40rpx;height:40rpx;
  margin:0 0 0 20rpx;
}
.top text{
  height:30rpx;
  margin-top:17rpx;
  margin-left:8rpx;
  font-size:32rpx;
  color:#1989fa;
}
.item .title{
  padding:35rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.item image{
  width:40rpx;height:40rpx;
  margin-right:20rpx;
}
.item_top button{
  border:1rpx solid #eee;
  border-radius:60rpx;
  align-items: center;
  font-size: 34rpx;
  margin-left:40rpx;
  margin-bottom:30rpx;
  background-color: #eee;
}
.item_bottom{
  display: flex;
  width:750rpx;
  color:#999;
  font-size: 34rpx;
  margin-bottom:35rpx;
  padding-left: 40rpx;
  position:relative;
}
.item_bottom .left{
  padding-bottom:20rpx;
}
.item_bottom .right{
  position:absolute;
  right:50rpx;
  font-size: 50rpx;
  top:-5rpx;
}