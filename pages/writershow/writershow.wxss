page {
  background: #fff;
}
.head-top {
  margin: 20rpx;
  border-radius: 20rpx;
}
.headBox {
  display: block;
  overflow: hidden;
}
.headBox image{
  width: 120rpx;
  height: 120rpx;
  left: 60rpx;
  top: 60rpx;

}
.headBox .nickname {
  font-size: 34rpx;
  display: block;
  overflow: hidden;
  margin-left: 160rpx;
  opacity: .8;
  margin-top: 30rpx;

}
.headBox  .autograph {
  display: block;
  overflow: hidden;
  margin-left: 160rpx;
  opacity: .8;
  font-size: 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  padding-top: 6rpx;
}
.infoBox {
  display: block;
  overflow: hidden;
  margin-left:200rpx; 
  margin-top: 80rpx;
  font-size: 30rpx;
}
.infoBox text{
  display: block;
  overflow: hidden;
  text-align: right;
  margin-right: 40rpx;
  padding-bottom:10rpx; 
}
.infoBox text.name{
  font-size: 46rpx;
  font-weight: 500;
}
.follow {
  position: absolute;
  right: 60rpx;
  top: 60rpx;


}
.selfpic{
  left: 200px;
  width: 48px; 
  border-radius: 50%;
  overflow: hidden;
  height:  48px;
  position: absolute;

}
.selftext{
 left: 10px;
 position: absolute;
 height:  48px;
 margin-top: 5%;
}

.index{
    background-color: white;
    flex: 1;
    min-height: 100%;
    font-size: 16px;
}
.head{
    display: block;
    overflow: hidden;
}
.body{
    padding-left: 10px;
    padding-right: 10px;
    overflow: hidden;
}
.title{
    font-size: 30px;
}
.cu-form-group .title {
  min-width: calc(4em + 30rpx);
}
.writerlist {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  border-top: 1rpx solid #ededed;
  padding: 25rpx 0rpx;
}
.writerlist .Label {
  display: block;
  overflow: hidden;
  margin: 10rpx 0rpx;
}
.writerlist  text.title{
  font-size: 36rpx;
  color: #444;
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden; 
}
.timemessage {
  display: block;
  overflow: hidden;
}
.timemessage .time{
  margin-right: 0;
  float: left;
  font-size: 28rpx;
  color: #888888;
}
.listFoot{
  display: inline-block;
  overflow: hidden;
  float: right;
  margin-top: -10rpx;
}
.listFoot view {
  float:left;
  margin-right: 20rpx;
}
.listFoot view text{
  font-size: 28rpx;
}
.listFoot .messageBox text.iconBox {
  margin-right: 10rpx;
}
.listFoot .messageBox .count{
  font-size: 28rpx;
  color: #888888;
}
